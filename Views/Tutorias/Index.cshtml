@model List<ProyectoFinalPA.Models.Tutoria>

@{
    ViewData["Title"] = "Tutorias - ";
}
<h2>Lista de tutorías</h2>
@{
    var rol = Context.Session.GetString("UsuarioRol");
}

@if (rol == "Docente")
{
    <a asp-action="Crear" class="btn btn-primary mb-3">AGREGAR TUTORIA</a>
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Tema</th>
                <th>Tutor</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tema</td>
                    <td>@item.Tutor</td>
                    <td>@item.Fecha.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay tutorías registradas.</p>
}