@{
    var nombre = Context.Session.GetString("UsuarioNombre");
    var rol = Context.Session.GetString("UsuarioRol");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .izq-fondo {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 0.80rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
            background-color: red;
            border: 2px solid darkred;
            color: white; /* Color */
            position: fixed;
            bottom: 2%;
            left: 1%;
            transform: translateX(-1%);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .fuente-letras {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 1.5rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
            color: darkgreen; /* Color */
        }

    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(nombre))
    {
        <div>
            <a asp-controller="Usuarios" asp-action="Logout" class="btn izq-fondo">Cerrar sesión</a>
        </div>
    }
</body>
</html>


