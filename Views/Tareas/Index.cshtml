@model List<ProyectoFinalPA.Models.Tarea>

@{
    ViewData["Title"] = "Tareas - ";
    var rol = Context.Session.GetString("UsuarioRol");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .tabla {
            min-width: 900px;
            border-collapse: collapse;
            background-color: white;
            border: 2px solid black;
            border-radius: 20px;
        }

        .tabla-contenedor {
            max-height: 400px; 
            overflow-y: auto;
            padding: 10px;
        }

        .encabezado {
            background-color: #FFB300;
            border: 2px solid black;
        }

        .celdas-enc, .celdas {
            padding: 15px;
            text-align: center;
            border: 2px solid black;
        }

        .fuente-titulo {
            font-family: 'Georgia', serif;
            font-size: 2rem; 
            font-weight: bold; 
        }

        .fuente-titulos {
            font-family: 'Georgia', serif; 
            font-size: 1.5rem; 
            font-weight: bold; 
        }

        .fuente-letras {
            font-family: 'Georgia', serif;
            font-size: 1rem; 
            font-weight: normal; 
            color: black;
        }

        .izq-pantalla {
            position: fixed;
            top: 13%;
            left: 2%;
            transform: translateX(-2%);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .posicion-pantalla {
            position: relative;
            margin: 50px auto;
            width: 90%;
            max-width: 1000px;
        }

        .btnagregar {
            background-color: #FFB300;
            color: white;
            position: fixed;
            top: 20%;
            left: 2%;
            transform: translateX(-2%);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .eliminar {
            font-family: 'Georgia', serif; 
            font-size: 0.80rem; 
            font-weight: bold; 
            background-color: red;
            border: 2px solid darkred;
            color: white; 
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 20px;
            position: relative;
            left: 10px; 
        }

        .salir {
            font-family: 'Georgia', serif; 
            font-size: 0.80rem; 
            font-weight: bold; 
            background-color: red;
            border: 2px solid darkred;
            color: white; 
            position: fixed;
            bottom: 2%;
            left: 1%;
            transform: translateX(-1%);
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>

    <div>
        <h2 class="fuente-titulo izq-pantalla" style="color: black">Lista de tareas</h2>
    </div>

    @if (rol == "Docente")
    {
        <a asp-action="Crear" class="btn btnagregar" style="border: 2px solid #B8860B;">Agregar tarea</a>
    }
    <div class="posicion-pantalla">
        <div class="tabla-contenedor">
            @if (Model.Any())
            {
                <table class="tabla">
                    <thead class="encabezado">
                        <tr class="fuente-titulos">
                            <th class="celdas-enc" style="color: white;">Descripción</th>
                            <th class="celdas-enc" style="color: white;">Materia</th>
                            <th class="celdas-enc" style="color: white;">Fecha de entrega</th>
                            <th class="celdas-enc" style="color: white;">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="fuente-letras">
                                <td class="celdas">@item.Descripcion</td>
                                <td class="celdas">@item.Materia</td>
                                <td class="celdas">@item.FechaEntrega.ToShortDateString()</td>
                                <td class="celdas text-center align-middle">
                                    <form asp-action="Eliminar" asp-route-id="@item.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn eliminar">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="fuente-titulos posicion-pantalla text-center">No hay tareas registradas.</p>
            }
        </div>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn salir">Regresar</a>
    </div>
</body>
</html>