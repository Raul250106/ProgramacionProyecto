@model List<ProyectoFinalPA.Models.Tarea>

@{
    ViewData["Title"] = "Tareas - ";
}
<h2>Lista de tareas</h2>
@{
    var rol = Context.Session.GetString("UsuarioRol");
}

@if (rol == "Docente")
{
    <a asp-action="Crear" class="btn btn-primary mb-3">AGREGAR TAREA</a>
}


@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Materia</th>
                <th>Fecha de Entrega</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descripcion</td>
                    <td>@item.Materia</td>
                    <td>@item.FechaEntrega.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay tareas registradas.</p>
}
