<!-- Define el título que aparecerá en la pestaña del navegador -->
@{
    ViewData["Title"] = "Inicio - ";
}
<!-- Obtiene nombre y rol del usuario desde la sesión activa -->
@{
    var nombre = Context.Session.GetString("UsuarioNombre");
    var rol = Context.Session.GetString("UsuarioRol");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }
        /* Posiciona mensaje de bienvenida en parte izquierda superior */
        .izq-pantalla {
            position: fixed;
            top: 13%;
            left: 3%;
            transform: translateX(-2%);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        /* Estilo para texto importante con letra elegante y verde oscuro */
        .fuente-letras {
            font-family: 'Georgia', serif; 
            font-size: 2.5rem; 
            font-weight: bold; 
            color: black; 
        }
        /* Centra botones principales en medio de la pantalla */
        .posicion-botones {
            position: fixed;
            top: 55%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex; 
            flex-direction: row;
            justify-content: center;
            align-items: center; 
            width: auto; 
            height: auto; 
        }
        /* Estilo para botones verdes y azules como Clases y Materiales */
        .boton{
            background-color: #FFB300;
            border: 2px solid #B8860B;
            color: white;           
            width: 100%;
            height: 92px;
            display: flex;
            justify-content: center; 
            align-items: center;
            text-align: center;
        }

        .cuadro-imagen {
            border: 2px solid #B8860B;
            background-color: #F5E9D7;
            color: white;
            width: 100%;
            height: 152px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .cuadro-personalizado {
            width: 250px;
            height: 275px;
            background-color: white;
            border: 2px solid black;
            border-radius: 15px;
            font-family: 'Georgia', serif;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 10px;
        }

        /* Fuente grande y elegante para el texto de botones */
        .fuente {
            font-family: 'Georgia', serif; 
            font-size: 2rem; 
            font-weight: bold;
        }

        .cuadro-imagen img {
            max-width: 100%;
            max-height: 100%;
            object-fit: fill;
        }
    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(nombre))
    {
        <div>
            <!-- Muestra saludo personalizado si el usuario está logueado correctamente -->
            <span class="izq-pantalla fuente-letras">
                ¡Hola @rol.ToLower() @nombre! ¿Qué desea hacer hoy?
            </span>
        </div>
    }
    <div class="posicion-botones">
        <!-- Botones de navegación hacia los módulos principales del sistema -->
        <div class="cuadro-personalizado">
            <div class="cuadro-imagen">
                <img src="/Images/clases.jpg" alt="Clases" />
            </div>
            <a class="btn boton fuente" asp-controller="Clases" asp-action="Index">Clases</a>
        </div>
        <div class="cuadro-personalizado ms-5">
            <div class="cuadro-imagen">
                <img src="/Images/tareas1.jpg" alt="Tareas" />
            </div>
            <a class="btn boton fuente" asp-controller="Tareas" asp-action="Index">Tareas</a>
        </div>
        <div class="cuadro-personalizado ms-5">
            <div class="cuadro-imagen">
                <img src="/Images/materiales.jpg" alt="Materiales" />
            </div>
            <a class="btn boton fuente" asp-controller="Materiales" asp-action="Index">Materiales</a>
        </div>
        <div class="cuadro-personalizado ms-5">
            <div class="cuadro-imagen">
                <img src="/Images/tutorias.jpg" alt="Tutorias" />
            </div>
            <a class="btn boton fuente" asp-controller="Tutorias" asp-action="Index">Tutorías</a>
        </div>
    </div>
</body>
</html>


