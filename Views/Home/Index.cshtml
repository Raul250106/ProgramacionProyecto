<!-- Define el título que aparecerá en la pestaña del navegador -->
@{
    ViewData["Title"] = "Inicio - ";
}
<!-- Obtiene nombre y rol del usuario desde la sesión activa -->
@{
    var nombre = Context.Session.GetString("UsuarioNombre");
    var rol = Context.Session.GetString("UsuarioRol");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }
        /* Posiciona mensaje de bienvenida en parte izquierda superior */
        .izq-pantalla {
            position: fixed;
            top: 13%;
            left: 2%;
            transform: translateX(-2%);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        /* Estilo para texto importante con letra elegante y verde oscuro */
        .fuente-letras {
            font-family: 'Georgia', serif; 
            font-size: 1.5rem; 
            font-weight: bold; 
            color: darkgreen; 
        }
        /* Centra botones principales en medio de la pantalla */
        .posicion-botones {
            position: fixed;
            top: 60%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex; 
            flex-direction: column;
            justify-content: center;
            align-items: center; 
            width: auto; 
            height: auto; 
        }
        /* Estilo para botones verdes y azules como Clases y Materiales */
        .boton-verde{
            width: 500px;
            background-color: lawngreen;
            border: 2px solid darkgreen;
            color: white;
        }
        .boton-azul{
            width: 500px;
            background-color: deepskyblue;
            border: 2px solid darkgreen;
            color: white;
        }
        /* Fuente grande y elegante para el texto de botones */
        .fuente {
            font-family: 'Georgia', serif; 
            font-size: 2rem; 
            font-weight: bold;
        }
    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(nombre))
    {
        <div>
            <!-- Muestra saludo personalizado si el usuario está logueado correctamente -->
            <span class="izq-pantalla fuente-letras">
                ¡Hola @rol.ToLower() @nombre! ¿Qué desea hacer hoy?
            </span>
        </div>
    }
    <div class="posicion-botones">
        <!-- Botones de navegación hacia los módulos principales del sistema -->
        <a class="btn boton-verde fuente mb-5" asp-controller="Clases" asp-action="Index">Clases</a>
        <a class="btn boton-azul fuente mb-5" asp-controller="Tareas" asp-action="Index">Tareas</a>
        <a class="btn boton-verde fuente mb-5" asp-controller="Materiales" asp-action="Index">Materiales</a>
        <a class="btn boton-azul fuente mb-5" asp-controller="Tutorias" asp-action="Index">Tutorías</a>
    </div>
</body>
</html>


