@{
    ViewData["Title"] = "Inicio - ";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .izq-pantalla {
            position: fixed;
            top: 2%;
            left: 2%;
            transform: translateX(-2%);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .fuente-letras {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 1rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
            color: darkgreen; /* Color */
        }

        .circulo {
            background-color: white; /* fondo verde claro suave */
            border: 2px solid darkgreen; /* borde verde oscuro */
            border-radius: 50%;
            width: 100px;
            height: 100px;
            padding: 18px; /* espacio interno */
            color: darkgreen; /* texto verde oscuro */
            font-family: 'Georgia', serif; /* fuente */
        }
    </style>
</head>
<body>
    <header>
        <div>
            <h2 class="izq-pantalla fuente-letras">Seleccione la opción deseada:</h2>
        </div>
    </header>

    <div>
        <a class="btn circulo" asp-controller="Tutorias" asp-action="Index">Tutorías</a>
    </div>

    <div>
        <a class="btn circulo" asp-controller="Tareas" asp-action="Index">Tareas</a>
    </div>

    <div>
        <a class="btn circulo" asp-controller="Materiales" asp-action="Index">Materiales</a>
    </div>

    <div>
        <a class="btn circulo" asp-controller="Clases" asp-action="Index">Clases</a>
    </div>
</body>
</html>


