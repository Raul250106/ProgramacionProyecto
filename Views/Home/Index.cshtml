@{
    ViewData["Title"] = "Inicio - ";
}
@{
    var nombre = Context.Session.GetString("UsuarioNombre");
    var rol = Context.Session.GetString("UsuarioRol");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .izq-pantalla {
            position: fixed;
            top: 13%;
            left: 2%;
            transform: translateX(-2%);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .fuente-letras {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 1.5rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
            color: darkgreen; /* Color */
        }

        .posicion-botones {
            position: fixed;
            top: 60%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex; /* Para usar flexbox */
            flex-direction: column;
            justify-content: center; /* Centrar horizontal */
            align-items: center; /* Centrar vertical */
            width: auto; /* Ancho fijo o el que necesites */
            height: auto; /* Alto fijo o el que necesites */
        }

        .boton-verde{
            width: 500px;
            background-color: lawngreen;
            border: 2px solid darkgreen;
            color: white;
        }
        .boton-azul{
            width: 500px;
            background-color: deepskyblue;
            border: 2px solid darkgreen;
            color: white;
        }

        .fuente {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 2rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
        }
    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(nombre))
    {
        <div>
            <span class="izq-pantalla fuente-letras">
                ¡Hola @rol.ToLower() @nombre! ¿Qué desea hacer hoy?
            </span>
        </div>
    }
    <div class="posicion-botones">
        <a class="btn boton-verde fuente mb-5" asp-controller="Clases" asp-action="Index">Clases</a>
        <a class="btn boton-azul fuente mb-5" asp-controller="Tareas" asp-action="Index">Tareas</a>
        <a class="btn boton-verde fuente mb-5" asp-controller="Materiales" asp-action="Index">Materiales</a>
        <a class="btn boton-azul fuente mb-5" asp-controller="Tutorias" asp-action="Index">Tutorías</a>
    </div>
</body>
</html>


