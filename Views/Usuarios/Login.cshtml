@model ProyectoFinalPA.Models.LoginViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .cuadro-personalizado {
            background-color: white; /* fondo verde claro suave */
            border: 2px solid darkgreen; /* borde verde oscuro */
            border-radius: 15px; /* bordes redondeados */
            padding: 18px; /* espacio interno */
            color: darkgreen; /* texto verde oscuro */
            font-family: 'Georgia', serif; /* fuente */
        }

        .posicion-pantalla {
            position: fixed;
            top: 50%; /* 50% desde arriba */
            right: 5%;
            transform: translate(-50%, -50%); /* Ajusta para centrar exactamente */
            display: flex; /* Para usar flexbox */
            justify-content: center; /* Centrar horizontal */
            align-items: center; /* Centrar vertical */
            width: 300px; /* Ancho fijo o el que necesites */
            height: 150px; /* Alto fijo o el que necesites */
        }

        .fuente-titulo {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 2rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
            color: darkgreen; /* Color */
        }

        .fuente-letras {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 1rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
            color: darkgreen; /* Color */
        }

        .formulario-login {
            width: 300px;
        }
    </style>
</head>
<body>
    <div class="posicion-pantalla">
        <div class="formulario-login cuadro-personalizado">
            <h2 class="text-center fuente-titulo mb-2">Iniciar sesión</h2>

            <form asp-action="Login" method="post">
                <div class="form-group mb-1 fuente-letras">
                    <label>Correo electronico:</label>
                    <input asp-for="Correo" class="form-control" style="border: 2px solid darkgreen; color: black;" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group mb-1 fuente-letras">
                    <label>Contrasena:</label>
                    <input asp-for="Contrasena" class="form-control" style="border: 2px solid darkgreen; color: black;" type="password" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <div style="height: 2px; background-color: darkgreen; margin: 15px 0;"></div>

                <div class="mb-1">
                    <button type="submit" class="btn w-100" style="background-color: deepskyblue; color: white">Ingresar</button>
                    <a asp-controller="Usuarios" asp-action="Registrar" class="btn  mt-2 w-100" style="background-color: lawngreen; color: white">Registrarse</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

<a class="btn" style="position: fixed; bottom: 15px; left: 20px; color: darkgreen; background-color: white; border: 2px solid darkgreen; font-weight: bold;"
   asp-controller="Colaboradores" asp-action="Index">Ver colaboradores
</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

