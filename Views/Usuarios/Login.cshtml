@model ProyectoFinalPA.Models.LoginViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login - AulaGestión</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .centro-pantalla {
            position: fixed;
            top: 50%; /* 50% desde arriba */
            right: 5%; /* 50% desde la izquierda */
            transform: translate(-50%, -50%); /* Ajusta para centrar exactamente */
            display: flex; /* Para usar flexbox */
            justify-content: center; /* Centrar horizontal */
            align-items: center; /* Centrar vertical */
            width: 300px; /* Ancho fijo o el que necesites */
            height: 150px; /* Alto fijo o el que necesites */
        }

        .fuente-titulos {
            font-family: 'Georgia', serif; /* Tipo de letra */
            font-size: 5rem; /* Tamaño de letra */
            font-weight: bold; /* Grosor */
            color: darkgreen; /* Color */
        }

        .formulario-login {
            width: 300px;
        }
    </style>
</head>
<body>
    <div class="centro-pantalla">
        <div class="formulario-login">
            <h2 class="text-center">Iniciar Sesión</h2>

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label>Correo:</label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Contraseña:</label>
                    <input asp-for="Contrasena" class="form-control" type="password" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Ingresar</button>

                <a asp-controller="Usuarios" asp-action="Registrar"
                   class="btn btn-outline-primary mt-2 w-100">
                    Registrarse
                </a>
            </form>
        </div>
    </div>
</body>
</html>

<a class="btn btn-info" style="position: fixed; bottom: 15px; left: 20px; color: darkgreen; background-color: #e0f2f1; border: 2px solid darkgreen;"
   asp-controller="Colaboradores" asp-action="Index">
    Ver colaboradores
</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

