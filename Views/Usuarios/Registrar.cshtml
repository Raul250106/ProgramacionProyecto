@model ProyectoFinalPA.Models.Usuario

<h2>Registrarse</h2>

<form asp-action="Registrar" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rol"></label>
        <select asp-for="Rol" class="form-control">
            <option>Docente</option>
            <option>Estudiante</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contrasena"></label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-4 w-100">Registrarse</button>
</form>

<a asp-action="Login" class="btn btn-link mt-2">Volver al login</a>

