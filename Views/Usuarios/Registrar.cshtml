<!-- Establece que el formulario usa el modelo Usuario completo -->
@model ProyectoFinalPA.Models.Usuario
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }
        /* Botón “Regresar” en esquina inferior izquierda con estilo rojo */
        .salir {
            font-family: 'Georgia', serif; 
            font-size: 0.80rem; 
            font-weight: bold;
            background-color: red;
            border: 2px solid darkred;
            color: white; 
            position: fixed;
            bottom: 2%;
            left: 1%;
            transform: translateX(-1%);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        /* Estilo verde para el botón que registra al usuario */
        .btnregistrar {
            background-color: lawngreen; 
            color: white;
        }
        /* Caja blanca centrada con bordes verdes y estilo elegante */
        .cuadro-personalizado {
            background-color: white;
            border: 2px solid darkgreen; 
            border-radius: 15px; 
            padding: 18px; 
            font-family: 'Georgia', serif; 
            width: 800px; 
            height: auto; 
        }
        /* Centra el formulario en la pantalla principal del navegador */
        .posicion-pantalla {
            position: fixed;
            top: 50%; 
            left: 50%;
            transform: translate(-50%, -50%); 
            display: flex;
            justify-content: center; 
            align-items: center; 
            width: 775px; 
            height: 475px; 
        }
        /* Estilo grande y centrado para el título “Registrarse” */
        .fuente-titulo {
            text-align: center;
            font-family: 'Georgia', serif; 
            font-size: 2rem; 
            font-weight: bold; 
            color: darkgreen; 
        }
        /* Fuente verde elegante usada en etiquetas del formulario */
        .fuente-letras {
            font-family: 'Georgia', serif; 
            font-size: 1rem;
            font-weight: bold;
            color: darkgreen;
        }
    </style>
</head>
<body>
    <div class="posicion-pantalla">
        <div class="cuadro-personalizado">
            <div>
                <!-- Título de formulario para crear un nuevo usuario -->
                <h2 class="fuente-titulo">Registrarse</h2>
            </div>
            <!-- Formulario que envía datos al servidor para registrarse -->
            <form asp-action="Registrar" method="post">
                <div class="form-group mb-1">
                    <!-- Campo para ingresar nombre, con validación de errores -->
                    <label asp-for="Nombre" class="fuente-letras"></label>
                    <input asp-for="Nombre" class="form-control" style="border: 2px solid darkgreen; color: black;" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-1">
                    <!-- Campo para ingresar correo electrónico y validación visual -->
                    <label asp-for="Correo" class="fuente-letras"></label>
                    <input asp-for="Correo" class="form-control" style="border: 2px solid darkgreen; color: black;" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group mb-1">
                    <!-- Selección de rol del usuario: Docente o Estudiante -->
                    <label asp-for="Rol" class="fuente-letras"></label>
                    <select asp-for="Rol" class="form-control" style="border: 2px solid darkgreen; color: black;">
                        <option>Docente</option>
                        <option>Estudiante</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
                <div class="form-group mb-1">
                    <!-- Campo para ingresar la contraseña del usuario, con estilo -->
                    <label asp-for="Contrasena" class="fuente-letras"></label>
                    <input asp-for="Contrasena" class="form-control" style="border: 2px solid darkgreen; color: black;" type="password" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <!-- Línea divisoria verde entre los campos y el botón -->
                <div style="height: 2px; background-color: darkgreen; margin: 15px 0;"></div>

                <!-- Botón verde para enviar formulario y registrar usuario -->
                <button type="submit" class="btn w-100 btnregistrar">Registrarse</button>
            </form>
        </div>
    </div>
    <div>
        <!-- Botón para volver al login si ya tiene cuenta -->
        <a asp-action="Login" class="btn salir">Regresar</a>
    </div>
</body>
</html>





