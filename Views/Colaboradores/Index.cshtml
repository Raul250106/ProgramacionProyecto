@model List<ProyectoFinalPA.Models.Colaborador>
@{
    ViewData["Title"] = "Colaboradores - ";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .salir {
            font-family: 'Georgia', serif; 
            font-size: 0.80rem; 
            font-weight: bold; 
            background-color: red;
            border: 2px solid darkred;
            color: white; 
            position: fixed;
            bottom: 2%;
            left: 1%;
            transform: translateX(-1%);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .centro-pantalla {
            position: fixed;
            top: 50%; 
            left: 50%; 
            transform: translate(-50%, -50%);
            display: flex;
            justify-content: center;
            align-items: center;
            width: 800px;
        }

        .fuente-titulo {
            text-align: center;
            font-family: 'Georgia', serif;
            font-size: 2rem; 
            font-weight: bold; 
            color: black;
        }

        .fuente-letras {
            font-family: 'Georgia', serif;
            font-size: 1rem; 
            font-weight: normal;
            color: black;
        }

        .cuadro-personalizado {
            background-color: white;
            border: 2.5px solid black;
            border-radius: 15px; 
            padding: 18px; 
            font-family: 'Georgia', serif; 
            height: auto;
            width: auto;
        }

        .cuadros {
            background-color: white;
            border: 2.5px solid black;
            border-radius: 15px; 
            padding: 18px; 
            font-family: 'Georgia', serif;
            height: auto;
            width: auto;
        }

    </style>
</head>
<body>
    <div>
        <div class="container">
            <div class="row centro-pantalla text-center cuadro-personalizado">
                <div>
                    <h2 class="fuente-titulo"> Colaboradores </h2>
                </div>
                @foreach (var colaborador in Model)
                {
                    <div class="col-md-6 mb-2">
                        <div class="cuadros fuente-letras">
                            Nombre: @colaborador.Name <br/>
                            Mail: @colaborador.Email
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div>
        <a asp-controller="Usuarios" asp-action="Login" class="btn salir">Regresar</a>
    </div>
</body>
</html>
